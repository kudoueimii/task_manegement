<h2>ユーザー編集</h2>
  <%= form_with(model:[:admin,@user], loclal: true) do |form| %>
      <div class="field">
        <%= form.label :名前 %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :管理者権限 %>
        <%= form.check_box :admin %>
      </div>

      <div class="field">
        <%= form.label :メールアドレス %>
        <%= form.email_field :email %>
      </div>

      <div class="field">
        <%= form.label :パスワード %>
        <%= form.password_field :password %>
      </div>


      <div class="field">
        <%= form.label :パスワード再入力 %>
        <%= form.password_field :password_confirmation %>
      </div>


        <%= form.submit "更新" %>
    <% end %>
<%= link_to 'ユーザー一覧', admin_users_path%>