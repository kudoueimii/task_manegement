<p><%= link_to "新規ユーザー登録", new_admin_user_path%></p>

<div class="index_page">
  <%= paginate @users %>

  <h2>管理:Taskユーザー一覧</h2>

  <table>
    <thead>
      <tr>
        <th>ユーザーID</th>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>管理者権限</th>
        <th>投稿数</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr class = 'user_now'>

          <td><%= user.id%></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin%></td>
          <td><%= user.tasks.count%>
          <td><%= link_to 'Show', admin_user_path(user.id) %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user.id) %></td>
          <td><%= link_to 'Destroy', admin_user_path(user.id), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


</div>