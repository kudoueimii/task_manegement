<h1>管理ユーザー用 新規ユーザー登録</h1>
<%=form_with(model: [:admin, @user],local: true) do |form|%>
  <div class="field">
    <%= form.label :ユーザー名 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :管理者権限 %>
    <%= form.check_box :admin %>
  </div>

  <div class="field">
    <%= form.label :メールアドレス %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :パスワード %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :パスワード再入力 %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit "登録" %>
  </div>
<% end %>